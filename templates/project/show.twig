{% extends 'base.twig' %}

{% block body %}
    <h1>{{ project["name"] }}</h1>
    <p class="text-muted">
        Développé du {{ project.startedAt.format('d/m/Y') }}
        au {{ project.finishedAt.format('d/m/Y à H:i:s') }}</p>
    <p>{{ project.description | raw('html') }}</p>

    <h2>Les langages utilisés</h2>
    <ul>
        {% for language in project['languages'] %}
            <li>{{ language }}</li>
        {% endfor %}
    </ul>

{% endblock %}